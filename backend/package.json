{
  "name": "@hrkmtsmt/backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev:env": "dotenvx get -f ../.env.backend --format eval >> .dev.vars",
    "dev:d1": "wrangler d1 migrations apply local --env local --local --persist-to ./.wrangler/state",
    "dev:worker": "wrangler dev --env local --test-scheduled --persist-to ./.wrangler/state",
    "dev": "pnpm dev:env && pnpm dev:d1 && pnpm dev:worker",
    "deploy": "wrangler secret bulk .dev.vars && wrangler deploy --env production",
    "migrate": "drizzle-kit migrate",
    "migrate:generate": "drizzle-kit generate",
    "test": "ENVIRONMENT='test' bun run migrate && bun test",
    "format": "biome format --write",
    "lint": "biome lint",
    "spell-check": "cspell '**'",
    "cf-typegen": "wrangler types"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@cloudflare/workers-types": "4.20250214.0",
    "better-sqlite3": "^11.10.0",
    "drizzle-kit": "0.30.4"
  },
  "dependencies": {
    "@octokit/rest": "^22.0.0",
    "camelcase-keys": "9.1.3",
    "drizzle-orm": "0.39.3",
    "fast-xml-parser": "^5.2.5",
    "hono": "4.7.2",
    "immer": "10.1.1",
    "query-string": "9.1.1",
    "snakecase-keys": "8.0.1",
    "uuid": "11.1.0"
  },
  "module": "src/main.ts",
  "type": "module"
}
