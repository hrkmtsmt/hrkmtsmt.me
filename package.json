{
  "name": "hrkmtsmt.me",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "dev": "remix vite:dev",
    "build": "remix vite:build",
    "deploy": "npm run build && wrangler pages deploy",
    "start": "wrangler pages dev ./build/client",
    "lint": "biome lint",
    "format": "biome format",
    "type-check": "tsc",
    "spell-check": "cspell '**'",
    "test": "vitest",
    "test:report": "vitest run --coverage",
    "typegen": "wrangler types",
    "preview": "npm run build && wrangler pages dev",
    "cf-typegen": "wrangler types",
    "postinstall": "husky install"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "1.21.0",
    "@phosphor-icons/react": "2.1.7",
    "@remix-run/cloudflare": "2.13.1",
    "@remix-run/cloudflare-pages": "2.13.1",
    "@remix-run/node": "2.13.1",
    "@remix-run/react": "2.13.1",
    "isbot": "5.1.17",
    "query-string": "9.1.1",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "swr": "2.2.5",
    "tailwind-variants": "0.3.1",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@cloudflare/workers-types": "4.20241022.0",
    "@remix-run/dev": "2.13.1",
    "@testing-library/dom": "10.4.0",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/feather-icons": "4.29.4",
    "@types/react": "19.0.8",
    "@types/react-dom": "19.0.3",
    "@vitest/coverage-v8": "3.0.5",
    "autoprefixer": "10.4.20",
    "cspell": "8.15.4",
    "globals": "15.11.0",
    "husky": "9.1.6",
    "jsdom": "26.0.0",
    "lint-staged": "15.2.10",
    "node-fetch": "3.3.2",
    "npm-check-updates": "17.1.8",
    "postcss": "8.4.47",
    "tailwindcss": "3.4.14",
    "typescript": "5.6.3",
    "vite": "5.4.10",
    "vite-tsconfig-paths": "5.0.1",
    "vitest": "3.0.5",
    "wrangler": "3.83.0"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": ["bash -c tsc --noEmit", "pnpm run lint"],
    "src/**/*.{ts,tsx,js,json}": "pnpm run format",
    "*": "pnpm run spell-check"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "volta": {
    "node": "20.14.0"
  }
}
